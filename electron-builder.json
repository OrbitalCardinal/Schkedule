{
  "extraResources": [
    {
      "from": "./resources/api/",
      "to": "api/",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "./app/node_modules",
      "to": "node_modules/",
      "filter": [
        "**/*"
      ]
    }
  ],
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "icon.png",
    "target": [
      "portable"
    ],
    "executableName": "Ungistor"
  },
  "portable": {
    "splashImage": "splash.png"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
